-var people = {CVC: {name: "Curt Canada", curl: "https://github.com/cvcanada"}, JLW: {name: "Jon Woodring", curl: "https://github.com/jonwoodring"}, LTL: {name: "Li-Ta Lo", curl: "https://github.com/ollielo"} }

mixin post(title, datetime, author)
  h3= title
  -var dashified= title.replace(/ /g, '-')
  a.anchor(name= dashified, href= '#' + dashified)
    span.octicon.octicon-link
  small
    = datetime + " -- "
    a(href= people[author].curl)
      = people[author].name
    br
  if block
    block
  else
    p
  a(href= '#' + dashified)
    small
      | Link to this post
  hr
  br
